    <fragment
        android:id="@+id/left_fragment"
        android:name="cn.edu.scujcc.worktwoweek.LeftFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/right_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_fragment"></FrameLayout>

    <Button
        android:id="@+id/startservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="STARTSERVICE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="STOPSERVICE"
        app:layout_constraintStart_toEndOf="@+id/startservice"
        app:layout_constraintTop_toTopOf="@+id/startservice" />

    <Button
        android:id="@+id/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Bind_Service"
        app:layout_constraintStart_toStartOf="@+id/startservice"
        app:layout_constraintTop_toBottomOf="@+id/startservice" />

    <Button
        android:id="@+id/onbind_service"
        android:layout_width="134dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:text="Onbind_Service"
        app:layout_constraintStart_toEndOf="@+id/bind_service"
        app:layout_constraintTop_toTopOf="@+id/bind_service" />

    <Button
        android:id="@+id/start_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="StartIntentService"
        app:layout_constraintStart_toStartOf="@+id/bind_service"
        app:layout_constraintTop_toBottomOf="@+id/bind_service" />

    <Button
        android:id="@+id/send_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="StandardBroadcast"
        app:layout_constraintStart_toStartOf="@+id/start_intent_service"
        app:layout_constraintTop_toBottomOf="@+id/start_intent_service" />

    <Button
        android:id="@+id/send_orderbroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="OraderBrodacast"
        app:layout_constraintStart_toEndOf="@+id/send_broadcast"
        app:layout_constraintTop_toTopOf="@+id/send_broadcast" />

